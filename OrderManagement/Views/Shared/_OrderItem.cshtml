@model OrderItemViewModel

<form asp-controller="OrderItem" asp-action="@Model.Action" method="post">
    <input type="hidden" name="OrderItemTableVm.OrderId" value="@Model.OrderItemTableVm.OrderId" />
    <div class="row m-2">
        <div class="form-group col">
            <label asp-for="OrderItemTableVm.Name"></label>
            <input class="form-control" asp-for="OrderItemTableVm.Name" />
        </div>

        <div class="form-group col">
            <label asp-for="OrderItemTableVm.Quantity"></label>
            <input class="form-control" asp-for="OrderItemTableVm.Quantity" />
        </div>

        <div class="form-group col">
            <label asp-for="OrderItemTableVm.Unit"></label>
            <input class="form-control" asp-for="OrderItemTableVm.Unit" />
        </div>
    </div>
    <div class="d-grid gap-2 col-2 mx-auto">
        <button class="btn btn-block btn-@Model.Theme" type="submit">@Model.Action</button>
    </div>
</form>
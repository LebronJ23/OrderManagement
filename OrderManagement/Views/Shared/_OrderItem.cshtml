@model OrderItemTableVm

<form asp-controller="OrderItem" asp-action="Create" method="post">
    <input type="hidden" name="orderId" value="@Model.OrderId" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input class="form-control" asp-for="Quantity" />
    </div>

    <div class="form-group">
        <label asp-for="Unit"></label>
        <input class="form-control" asp-for="Unit" />
    </div>

    <button class="btn btn-primary" type="submit">Create Item</button>
</form>